---
const { title, description, link, image, domain } = Astro.props;
---
<a href={link} target="_blank" class="preview-card">
  {image && (
    <div class="preview-image-container">
      <img src={image} alt={title} class="preview-image" />
    </div>
  )}
  <div class="preview-text">
    <h3>{title}</h3>
    <p>{description}</p>
    {domain && <span class="domain">{domain}</span>}
  </div>
</a>

<style>
.preview-card {
  display: flex;
  max-width: 500px;
  min-height: 120px;
  border-radius: 0.75rem;
  overflow: hidden;
  text-decoration: none;
  background-color: #fff;
  border: 1px solid #e5e7eb;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  transition: transform 0.2s, box-shadow 0.2s;
  color: #000;
  margin: 1rem 0;
}

.preview-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 16px rgba(0,0,0,0.15);
}

.preview-image-container {
  width: 150px;
  min-width: 150px;
  height: 120px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f3f4f6;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.preview-text {
  padding: 1rem;
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
  min-height: 120px;
}

.preview-text h3 {
  margin: 0 0 0.5rem 0;
  font-size: 1rem;
  font-weight: bold;
  line-height: 1.4;
}

.preview-text p {
  margin: 0 0 0.5rem 0;
  font-size: 0.875rem;
  color: #4b5563;
  line-height: 1.5;
  flex: 1;
}

.domain {
  font-size: 0.75rem;
  color: #9ca3af;
  margin-top: auto;
}

@media (max-width: 480px) {
  .preview-card {
    max-width: 100%;
    margin: 1rem 0.5rem;
  }
  
  .preview-image-container {
    width: 120px;
    min-width: 120px;
  }
  
  .preview-text {
    padding: 0.75rem;
  }
}

@media (prefers-color-scheme: dark) {
  .preview-card {
    background-color: #1f2937;
    color: #fff;
  }

  .preview-text h3 {
    color: #fff;
  }

  .preview-text p {
    color: #d1d5db;
  }
}
</style>