---
import { getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import ArrowCard from "@components/ArrowCard.astro";
import { FAVORITES } from "@consts";

const favorites = (await getCollection("favorites"))
  .filter(f => !f.data.draft)
  .filter(f => f.id.split("/").length === 2)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<PageLayout title={FAVORITES.TITLE} description={FAVORITES.DESCRIPTION}>
  <Container>
    <div class="space-y-10">
      <div class="animate font-semibold text-black dark:text-white">
        Favorites
      </div>
      <ul class="animate flex flex-col gap-4">
        {
          favorites.map((favorite) => (
            <a href={`/favorites/${favorite.id.split("/")[0]}/`}>
            <ArrowCard entry={favorite}/>
            </a>
          ))
        }
      </ul>
    </div>
  </Container>
</PageLayout>
