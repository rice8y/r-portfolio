---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import FormattedDate from "@components/FormattedDate.astro";
import { readingTime } from "@lib/utils";
import BackToPrev from "@components/BackToPrev.astro";
import Link from "@components/Link.astro";

export async function getStaticPaths() {
  const favorites = (await getCollection("favorites"))
    .filter(post => !post.data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
  return favorites.map((favorite) => ({
    params: { slug: favorite.slug },
    props: favorite,
  }));
}
type Props = CollectionEntry<"favorites">;

const favorite = Astro.props;
const { Content } = await favorite.render();
---

<PageLayout title={favorite.data.title} description={favorite.data.description}>
  <Container>
    <div class="animate">
      <BackToPrev href="/favorites">
        Back to favorites
      </BackToPrev>
    </div>
    <div class="space-y-1 my-10">
      <div class="animate flex items-center gap-1.5">
        <div class="font-base text-sm">
          <FormattedDate date={favorite.data.date} />
        </div>
        &bull;
        <div class="font-base text-sm">
          {readingTime(favorite.body)}
        </div>
      </div>
      <div class="animate text-2xl font-semibold text-black dark:text-white">
        {favorite.data.title}
      </div>
      {(favorite.data.demoURL || favorite.data.repoURL) && (
        <nav class="animate flex gap-1">
          {favorite.data.demoURL && (
            <Link href={favorite.data.demoURL} external>
              demo
            </Link>
          )}
          {favorite.data.demoURL && favorite.data.repoURL && (
            <span>/</span>
          )}
          {favorite.data.repoURL && (
            <Link href={favorite.data.repoURL} external>
              repo
            </Link>
          )}
        </nav>
      )}
    </div>
    <article class="animate">
      <Content />
    </article>
  </Container>
</PageLayout>