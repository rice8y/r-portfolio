---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import FormattedDate from "@components/FormattedDate.astro";
import { readingTime } from "@lib/utils";
import BackToPrev from "@components/BackToPrev.astro";
import Link from "@components/Link.astro";

export async function getStaticPaths() {
  const favorites = (await getCollection("favorites"))
    .filter(post => !post.data.draft)
    .sort((a, b) => {
      const aDate = a.data.updatedDate ?? a.data.publishedDate;
      const bDate = b.data.updatedDate ?? b.data.publishedDate;
      return bDate.valueOf() - aDate.valueOf();
    });
  return favorites.map((favorite) => ({
    params: { slug: favorite.slug },
    props: favorite,
  }));
}
type Props = CollectionEntry<"favorites">;

const favorite = Astro.props;
const { Content } = await favorite.render();

const links = [];
if (favorite.data.demoURL) {
  links.push({ url: favorite.data.demoURL, label: "demo" });
}
if (favorite.data.repoURL) {
  links.push({ url: favorite.data.repoURL, label: "GitHub" });
}
if (favorite.data.customLinks) {
  favorite.data.customLinks.forEach((link) => {
    links.push({ url: link.url, label: link.label });
  });
}
---

<PageLayout title={favorite.data.title} description={favorite.data.description}>
  <Container>
    <div class="animate">
      <BackToPrev href="/favorites">
        Back to favorites
      </BackToPrev>
    </div>
    <div class="space-y-1 my-10">
      <div class="animate flex items-center gap-1.5">
        <div class="font-base text-sm flex items-center gap-1">
          <span>Published: <FormattedDate date={favorite.data.publishedDate} /></span>
          {favorite.data.updatedDate && (
            <>
              <span>/</span>
              <span>Updated: <FormattedDate date={favorite.data.updatedDate} /></span>
            </>
          )}
        </div>
        &bull;
        <div class="font-base text-sm">
          {readingTime(favorite.body)}
        </div>
      </div>
      <div class="animate text-2xl font-semibold text-black dark:text-white">
        {favorite.data.title}
      </div>
      {links.length > 0 && (
        <nav class="animate flex gap-1">
          {links.map((link, index) => (
            <>
              <Link href={link.url} external>
                {link.label}
              </Link>
              {index < links.length - 1 && (
                <span>/</span>
              )}
            </>
          ))}
        </nav>
      )}
    </div>
    <article class="animate">
      <Content />
    </article>
  </Container>
</PageLayout>